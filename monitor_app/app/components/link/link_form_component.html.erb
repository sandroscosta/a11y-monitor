<%= form_with model: @link, url: project_links_path(@project.id), method: :post do |form| %>
    <div class="flex flex-col gap-y-4">
        <div class="flex flex-col gap-y-2">
            <label for="name" class="font-bold">Name</label>
            <%= form.text_field :name, class: "border border-slate-300 rounded py-2 px-4 w-full", placeholder: "The project name should be unique" %>
        </div>
        <div class="flex flex-col gap-y-2">
            <label for="url" class="font-bold">URL</label>
            <%= form.text_field :url, class: "border border-slate-300 rounded py-2 px-4 w-full", placeholder: "This should be a valid URL" %>
        </div>
        <div class="flex flex-col gap-y-2">
            <%= form.submit "Create", class: "bg-indigo-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
        </div>
    </div>
<% end %>