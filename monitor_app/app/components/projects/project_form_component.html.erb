<%= form_with(model: @project) do |form| %>
    <div class="flex flex-col gap-y-4">
        <div class="flex flex-col gap-y-2">
            <label for="name" class="font-bold">Name</label>
            <%= form.text_field :name, class: "border border-slate-300 rounded py-2 px-4 w-full", placeholder: "The project name should be unique" %>
        </div>
        <div class="flex flex-col gap-y-2">
            <label for="description" class="font-bold">Description</label>
            <%= form.text_area :description, class: "border border-slate-300 rounded py-2 px-4 w-full" %>
        </div>
        <div class="flex flex-col gap-y-2">
            <label for="standard" class="font-bold">Standard</label>
            <%= form.select :standard, options_for_select(Project.standards.map, selected: @project.standard), {}, { class: "border border-slate-300 rounded py-2 px-4 w-full" } %>
        </div>
        <div class="flex flex-col gap-y-2">
            <label for="screenshot" class="font-bold">Screenshot</label>
            <%= form.file_field :screenshot, class: "border border-slate-300 rounded py-2 px-4 w-full" %>
        </div>
        <div class="flex flex-col gap-y-2">
            <%= form.submit "Create", class: "bg-indigo-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
        </div>
    </div>
<% end %>