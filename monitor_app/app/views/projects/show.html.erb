<h2 class="font-bold text-4xl"><%= @project.name %></h2>
<div class="flex justify-between bg-slate-100 rounded-xl p-6 my-6">
    <p class="self-center">
        <%= @project.description %>
    </p>
    <div class="flex gap-x-4">
        <%= link_to "Add new link", new_project_link_path(@project), class: "bg-indigo-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= render(Common::ImportButtonComponent.new(title: "Import from CSV")) %>
    </div>
</div>
<div class="my-6">
    <h3 class="font-bold text-2xl">Links <span class="text-sm text-slate-500">(<%= @project.service_tasks.count %>)</span></h3>
    <% @project.service_tasks.each do |task| %>
    <div class="flex gap-x-4 bg-slate-100 rounded-xl p-6 my-4">
        <p><%= task.name %></p>
        <p><%= link_to task.url, task.url %></p>
    </div>
    <% end %>
</div>
